{
  "name": "miracleforyou",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e ./env/local.app.env ts-node src/index.ts",
    "start:local": "npm run copy:local-env && cd ./dist && node -r dotenv/config index.js",
    "copy:local-env": "cp ./env/local.app.env ./dist/.env",
    "build": "./scripts/build.sh",
    "test": "jest --config jest.json",
    "test:cov": "jest --config jest.json --coverage",
    "lib:check": "ncu",
    "lib:upgrade": "ncu -u && npm install",
    "lint": "npx eslint src tests",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "npx prettier src test --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "typeorm": "dotenv -e ./env/test.app.env -- ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run -- -d ./src/data-source.ts",
    "migration:generate": "npm run typeorm -- -d ./src/data-source.ts migration:generate",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:revert": "npm run typeorm -- -d ./src/data-source.ts migration:revert",
    "migration:show": "npm run typeorm -- -d ./src/data-source.ts migration:show"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "clean-architecture",
    "nestjs"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/testing": "10.2.7",
    "@types/bcryptjs": "2.4.4",
    "@types/busboy": "1.5.1",
    "@types/express": "4.17.18",
    "@types/jest": "29.5.5",
    "@types/mime-types": "^2.1.2",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.3",
    "@types/passport-jwt": "3.0.10",
    "@types/passport-local": "1.0.36",
    "@types/supertest": "2.0.14",
    "@types/uuid": "9.0.4",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "eslint": "8.50.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jsonwebtoken": "9.0.2",
    "npm-check-updates": "16.14.5",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@nestjs/common": "10.2.7",
    "@nestjs/core": "10.2.7",
    "@nestjs/cqrs": "10.2.6",
    "@nestjs/jwt": "10.1.1",
    "@nestjs/passport": "10.0.2",
    "@nestjs/platform-express": "10.2.7",
    "@nestjs/swagger": "7.1.13",
    "@nestjs/typeorm": "^10.0.0",
    "bcryptjs": "2.4.3",
    "busboy": "1.6.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "16.3.1",
    "jest": "^29.7.0",
    "mime-types": "^2.1.35",
    "module-alias": "2.2.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.1",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "swagger-ui-express": "5.0.0",
    "typeorm": "^0.3.17",
    "typeorm-transactional": "^0.4.1",
    "uuid": "9.0.1"
  },
  "_moduleAliases": {
    "@app": "src/app",
    "@infra": "src/app/infra",
    "@core": "src/core"
  }
}
